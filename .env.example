# Server Configuration
PORT=3000                    # Porta em que a API vai rodar
NODE_ENV=development         # Ambiente (development, production, test)

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/aicoach?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_should_be_at_least_32_characters_long
JWT_EXPIRES_IN=1d            # Tempo de expiração do token (1d = 1 dia, 12h = 12 horas, etc.)

# Logging
LOG_LEVEL=info               # Níveis: error, warn, info, debug 